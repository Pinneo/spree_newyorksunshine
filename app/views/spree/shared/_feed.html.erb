<%
  paginated_products = @searcher.retrieve_products if params.key?(:keywords)
  paginated_products ||= products
%>

<% content_for :head do %>
  <% if paginated_products.respond_to?(:num_pages) %>
    <%= rel_next_prev_link_tags paginated_products %>
  <% end %>
<% end %>

<% if paginated_products.respond_to?(:num_pages) %>
  <% content_for :top do %>
    <%= paginate paginated_products %>
  <% end %>
<% end %>

<div class="feed">

  <div class="feed-group">

    <% @full_bleed.each do |item| %>

      <%= link_to(item[:href], {:class => "product"}) do %>
        <%= image_tag(item[:image_src], :class => "product-image") %>
        <div class="info">
          <div><%= item[:cta_category] %></div>
          <%= item[:cta_predicate] %>
        </div>
      <% end %>

    <% end %>
  </div>

</div>

<div class="feed">

  <% if products.empty? %>
    <%= Spree.t(:no_products_found) %>
  <% elsif params.key?(:keywords) %>
    <h4 class="search-results-title"><%= Spree.t(:search_results, :keywords => h(params[:keywords])) %></h4>
  <% end %>

  <% if products.any? %>
    <div class="feed-group inline product-listing" data-hook>
      <% products.each do |product| %>
        <%= link_to(product, {:id => "product_" + product.id.to_s, :class => "product not-loading" }) do %>
          <%= product_image(product, :itemprop => "image", :class => "product-image") %>
          <div class="info">
            <div>SHOP</div>
            <%= product.name %>
          </div>
        <% end %>
      <% end %>
      <% reset_cycle("classes") %>
    </div>
  <% end %>

  <% if paginated_products.respond_to?(:num_pages) %>
      <%= paginate paginated_products %>
  <% end %>

</div>
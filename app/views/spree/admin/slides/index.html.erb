<% content_for :page_title do %>
  <%= Spree.t(:listing_slides_for_lookbook) %> "<%= @lookbook.name %>"
<% end %>

<% content_for :page_actions do %>
  <li id="new_product_link">
    <%= button_link_to Spree.t(:new_slide), new_admin_lookbook_slide_path, { :remote => false, :icon => 'plus', :id => 'admin_new_lookbook' } %>
  </li>
<% end if can?(:create, Spree::Slide) %>

<%= render :partial => 'spree/admin/shared/content_sub_menu' %>

<% if @slides.any? %>
  <table>
    <thead>
      <tr>
        <th>Embed Code</th>
        <th>Slide Images</th>
      </tr>
    </thead>

    <tbody>
      <% @slides.each do |slide| %>
        <tr>
          <td><%= slide.embed_code %></td>
          <td>


            <%= link_to admin_slide_slide_images_path(slide), :class => "fa fa-eye icon_link with-tip" do %>
              <span><%= slide.slide_images.length %></span>
            <% end %>
          </td>
          <td class="actions">
            <%= link_to_edit slide, :no_text => true, :class => 'edit' %>
            &nbsp;
            <%= link_to_delete slide, :no_text => true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No slides to display</p>
<% end %>

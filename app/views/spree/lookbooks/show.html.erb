<%= render 'lookbook_sub_menu' %>

<div id="lookbook">
  <div id="plane">

    <div class="stage">

      <% @lookbook.slides.each do |slide| %>
        <div class="slide">


          <% case slide.slide_images.length

            when 1 %>

              <% slide.slide_images.each do |slide_image| %>
                <!-- <%= image_tag slide_image.attachment(:full), { :class => "look style-#{slide.slide_images.length}" } %> -->
                <div class="image look style-<%= slide.slide_images.length %>" style='background-image: url(<%= slide_image.attachment(:full) %>)'></div>
              <% end %>

          <% when 2 %>

              <% slide.slide_images.each do |slide_image| %>
                <!-- <%= image_tag slide_image.attachment(:portrait), { :class => "look style-#{slide.slide_images.length}" } %> -->
                <div class="image look style-<%= slide.slide_images.length %>" style='background-image: url(<%= slide_image.attachment(:portrait) %>)'></div>
              <% end %>

          <% when 3 %>

              <% slide.slide_images.each do |slide_image| %>
                <!-- <%= image_tag slide_image.attachment(:portrait_skinny), { :class => "look style-#{slide.slide_images.length}" } %> -->
                <div class="image look style-<%= slide.slide_images.length %>" style='background-image: url(<%= slide_image.attachment(:portrait_skinny) %>)'></div>
              <% end %>

          <% end %>


        </div>
      <% end %>
    </div>

    <div class="left capture"></div>
    <div class="right capture"></div>

  </div>

  <div class="thumbnails">
    <% @lookbook.slides.each do |slide| %>

      <div class="thumbnail">

        <% slide.slide_images.each do |slide_image| %>
        <%= image_tag slide_image.attachment, { :class => "thumbnail-style-#{slide.slide_images.length}" } %>

        <% end %>

      </div>


    <% end %>
  </div>

</div>
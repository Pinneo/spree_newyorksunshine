<div id="social" class="product">
  <a class="facebook icon" href="http://www.facebook.com/sharer/sharer.php?u=<%= product_url(@product) %>" target="_blank">fb</a>
  <a class="twitter icon" href="http://twitter.com/share?text=<%= accurate_title %> by @nys&url=<%= product_url(@product) %>" target="_blank">tw</a>
  <a class="pinterest icon" href="http://pinterest.com/pin/create/button/?url=<%= product_url(@product) %>&media=<%= @product.images.order(:position).first.attachment %>" target="_blank">pi</a>
  <a class="svpply icon" href="#">sv</a>
  <script src="http://svpply.com/api/all.js#xsvml=1" type="text/javascript"></script>
  <sv:product-button type="boxed"></sv:product-button>
</div>
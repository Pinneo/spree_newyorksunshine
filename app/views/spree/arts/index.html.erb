<% content_for :top do %>
<div id="video-container">

  <video autoplay loop muted data-state="playing">
    <source src="http://newyorksunshine.s3.amazonaws.com/hoop-dreams.webm">
    <source src="http://newyorksunshine.s3.amazonaws.com/hoop-dreams.mp4">
  </video>

  <div class="description"><div class="inner"><%== @artist_statement %></div></div>

  <div class="top-area"></div>
  <div class="bottom-area"></div>

</div>

  <div id="lookbook">
    <div id="plane">
      <div class="stage">
        <% @works.each do |work| %>
          <%= image_tag work.attachment(:large), class: "slide" %>
        <% end %>
      </div>
      <div class="left capture"></div>
      <div class="right capture"></div>
    </div>
    <div class="thumbnails">
      <% @works.each do |work| %>
        <div class="thumbnail">
          <%= image_tag work.attachment(:large), class: "work" %>
        </div>
      <% end %>
    </div>
  </div>

<% end %>
